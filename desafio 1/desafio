import numpy as np

tam_array = 5
array = [None] * tam_array
re = 0
frente = 0

def inserir(elemento):
    global re, frente

    verificar_falso_overflow()

    if re == frente and array[re] != None:
        print("Fila cheia = OVERFLOW")
    else:
        array[re] = elemento
        re = (re + 1) % tam_array

    print(array)

def remover():
    global frente, re

    if frente == re and array[frente] == None:
        print("Fila vazia, temos um -> UNDERFLOW")
    else:
        array[frente] = None
        frente = (frente + 1) % tam_array

    print(array)

def consultar_elemento(elemento):
    global frente, re, tam_array

    encontrado = False
    i = frente
    while i != re:
        if array[i] == elemento:
            print(f"Elemento {elemento} encontrado na posição {i}")
            encontrado = True
            break
        i = (i + 1) % tam_array

    if not encontrado:
        print(f"Elemento {elemento} não encontrado na fila")

def verificar_falso_overflow():
    global re, frente, tam_array

    if re + 1 == frente:
        print("Falso Overflow!")
        novo_array = [None] * (tam_array * 2)
        for i in range(tam_array):
            novo_array[i] = array[(frente + i) % tam_array]
        array = novo_array
        frente = 0
        re = tam_array - 1
        tam_array *= 2

def Traco(msg):
    print("-" * 40)
    print(msg)
    print("-" * 40)

while True:
    Traco("\nMenu:")
    Traco("1. Inserir elemento")
    Traco("2. Remover elemento")
    Traco("3. Exibir elementos")
    Traco("4. Procurar elemento")
    Traco("5. Sair")

    opcao = int(input("Escolha uma das opções acima: "))

    if opcao == 1:  
        elemento = int(input("Digite o elemento que quer adicionar: "))
        inserir(elemento)
        verificar_falso_overflow()

    elif opcao == 2:
        remover()

    elif opcao == 3:
        print(array)

    elif opcao == 4:
        procura = int(input("Digite o elemento que você quer procurar na Fila: "))
        consultar_elemento(procura)

    elif opcao == 5:
        break

    else:
        print("Opção desconhecida, tente novamente!")